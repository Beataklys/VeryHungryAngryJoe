
<table class="table">
  <thead class="thead-default">
  <tr>
    <th>User Name</th>
    <th>Restaurant Name</th>
    <th>Dish</th>
    <th>Price</th>
    <th>Order Status</th>
    <th></th>



  </tr>
  </thead>
  <tbody>

    <%= simple_form_for(@order, remote: true) do |f| %>

    <%= div_for orders.each do |order| %>
        <tr>
          <td><%= order.user.name %></td>
          <td><%= order.restaurant_name %></td>
          <td><%= order.dish_name %></td>
          <td><%= order.price %></td>
          <td><%= order.order_status%></td>
      <td>    <button type="button" class="btn btn-default">
        <span class="glyphicon glyphicon-ok"></span></button>
        <%= link_to "Delivered order", delivered_path(order), remote: true %></td>
          <!-- <td><%= link_to "Finalize order",  order, remote: true, method: :put %> -->
          </td>



        </tr>
    <% end %>



    <% end %>


  </tbody>
</table>
